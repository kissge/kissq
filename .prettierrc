{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-css-order",
		"@trivago/prettier-plugin-sort-imports"
	],
	"importOrder": ["<THIRD_PARTY_MODULES>", "^\\$(.*)$", "^[./]"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
